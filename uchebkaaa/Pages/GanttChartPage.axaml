<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="uchebkaaa.Pages.GanttChartPage">

    <Grid Background="#FEF9DE">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#BB0C07" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="/Assets/Images/Logos/Logo_Color_Transparent.png"
                       Width="60" Height="60" Margin="0,0,20,0"/>

                <TextBlock Grid.Column="1"
                           Text="Диаграмма Ганта производства"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="2"
                        x:Name="LogoutButton"
                        Content="Выход"
                        Background="#4879AC"
                        Foreground="White"
                        Padding="20,10"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#F3CC8D" Padding="15">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button x:Name="BackButton"
                        Content="Назад"
                        Background="#4879AC"
                        Foreground="White"
                        Padding="15,8"/>

                <TextBlock Text="Заказ:" VerticalAlignment="Center"/>

                <ComboBox x:Name="OrderComboBox"
                          Width="350"
                          DisplayMemberBinding="{Binding Name}"/>

                <Button x:Name="BuildButton"
                        Content="Построить"
                        Background="#4879AC"
                        Foreground="White"
                        Padding="15,8"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="2"
                      Margin="20"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="GanttCanvas"/>
        </ScrollViewer>
    </Grid>
</UserControl>
