<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
        x:Class="uchebkaaa.Pages.OrderStatusDialog"
        Title="Изменение статуса заказа"
        Width="500" Height="300"
        WindowStartupLocation="CenterOwner">
    <Grid Background="#FEF9DE" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="10" Spacing="10">
            <TextBlock Text="Текущий статус:" FontWeight="Bold"/>
            <TextBlock x:Name="CurrentStatusTextBlock" Margin="0,0,0,5"/>

            <TextBlock Text="Новый статус:" FontWeight="Bold"/>
            <ComboBox x:Name="StatusComboBox" Width="250"/>

            <TextBlock Text="Комментарий (при отмене/отклонении):" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox x:Name="CommentTextBox" AcceptsReturn="True" Height="80" TextWrapping="Wrap"/>

            <TextBlock x:Name="ErrorTextBlock" Foreground="#BB0C07" Margin="0,5,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0" Spacing="10">
            <Button Content="Сохранить" x:Name="SaveButton"
                    Background="#4879AC" Foreground="#FFFFFF"
                    Padding="20,10" Width="120"/>
            <Button Content="Отмена" x:Name="CancelButton"
                    Background="#BB0C07" Foreground="#FFFFFF"
                    Padding="20,10" Width="120"/>
        </StackPanel>
    </Grid>
</Window>

