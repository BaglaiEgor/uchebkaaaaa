<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="uchebkaaa.Pages.QualityParamAddDialog"
        Title="Новый параметр качества"
        Width="400" Height="150"
        WindowStartupLocation="CenterOwner">
    <Grid Background="#FEF9DE" Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Наименование параметра:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" x:Name="NameTextBox" Margin="0,0,0,15"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="OK" x:Name="OkButton" Background="#4879AC" Foreground="#FFFFFF" Padding="20,10"/>
            <Button Content="Отмена" x:Name="CancelButton" Background="#BB0C07" Foreground="#FFFFFF" Padding="20,10"/>
        </StackPanel>
    </Grid>
</Window>
