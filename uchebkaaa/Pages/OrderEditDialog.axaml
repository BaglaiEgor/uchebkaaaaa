<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="uchebkaaa.Pages.OrderEditDialog"
        mc:Ignorable="d"
        Width="800"
        Height="600"
        WindowStartupLocation="CenterOwner"
        Title="Оформление заказа">
  <Grid Background="#FEF9DE" Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0"
                Orientation="Vertical"
                Spacing="5">
      <TextBlock Text="Основные данные"
                 FontSize="18"
                 FontWeight="Bold"
                 Margin="0,0,0,5" />

      <Grid ColumnDefinitions="Auto,*"
            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto">
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Номер заказа:"
                   Margin="0,0,5,5"
                   VerticalAlignment="Center" />
        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   x:Name="OrderNumberTextBlock"
                   Margin="0,0,0,5"
                   VerticalAlignment="Center" />

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="Дата:"
                   Margin="0,0,5,5"
                   VerticalAlignment="Center" />
        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   x:Name="OrderDateTextBlock"
                   Margin="0,0,0,5"
                   VerticalAlignment="Center" />

        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="Наименование заказа:"
                   Margin="0,0,5,5"
                   VerticalAlignment="Center" />
        <TextBox Grid.Row="2"
                 Grid.Column="1"
                 x:Name="NameTextBox"
                 Margin="0,0,0,5" />

        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="Заказчик:"
                   Margin="0,0,5,5"
                   VerticalAlignment="Center" />
        <ComboBox Grid.Row="3"
                  Grid.Column="1"
                  x:Name="CustomerComboBox"
                  DisplayMemberBinding="{Binding Name}"
                  Margin="0,0,0,5" />

        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   Text="Изделие:"
                   Margin="0,0,5,5"
                   VerticalAlignment="Center" />
        <ComboBox Grid.Row="4"
                  Grid.Column="1"
                  x:Name="ProductComboBox"
                  DisplayMemberBinding="{Binding Name}"
                  Margin="0,0,0,5" />

        <TextBlock Grid.Row="5"
                   Grid.Column="0"
                   Text="Стоимость заказа:"
                   Margin="0,0,5,5"
                   VerticalAlignment="Center" />
        <TextBox Grid.Row="5"
                 Grid.Column="1"
                 x:Name="CostTextBox"
                 Margin="0,0,0,5" />

        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   Text="Плановая дата завершения:"
                   Margin="0,0,5,0"
                   VerticalAlignment="Center" />
        <DatePicker Grid.Row="6"
                    Grid.Column="1"
                    x:Name="EndDatePicker"
                    Margin="0,0,0,0" />
      </Grid>
    </StackPanel>

    <TabControl Grid.Row="1" Margin="0,10,0,10">
      <TabItem Header="Описание изделия">
        <TextBox x:Name="DescriptionTextBox"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 ScrollViewer.VerticalScrollBarVisibility="Auto" />
      </TabItem>

      <TabItem Header="Размеры изделия">
        <DataGrid x:Name="SizesDataGrid"
                  AutoGenerateColumns="False">
          <DataGrid.Columns>
            <DataGridTextColumn Header="Наименование"
                                Binding="{Binding Name}"
                                Width="*" />
            <DataGridTextColumn Header="Ед. изм."
                                Binding="{Binding Unit}"
                                Width="100" />
            <DataGridTextColumn Header="Значение"
                                Binding="{Binding Value}"
                                Width="150" />
          </DataGrid.Columns>
        </DataGrid>
      </TabItem>

      <TabItem Header="Схемы и чертежи">
        <StackPanel Margin="5"
                    Spacing="5">
          <Button x:Name="AddSchemaButton"
                  Content="Добавить файл..."
                  Width="150"
                  Background="#4879AC"
                  Foreground="White" />
          <ListBox x:Name="SchemasListBox" />
        </StackPanel>
      </TabItem>
    </TabControl>

    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Spacing="10">
      <TextBlock x:Name="ErrorTextBlock"
                 Foreground="#BB0C07"
                 VerticalAlignment="Center"
                 Margin="0,0,20,0" />
      <Button x:Name="OkButton"
              Content="Сохранить"
              Width="120"
              Background="#4879AC"
              Foreground="White" />
      <Button x:Name="CancelButton"
              Content="Отмена"
              Width="120"
              Background="#BB0C07"
              Foreground="White" />
    </StackPanel>
  </Grid>
</Window>

