<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="uchebkaaa.Pages.QualityControlPage">
    <Grid Background="#FEF9DE">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#BB0C07" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="/Assets/Images/Logos/Logo_Color_Transparent.png"
                       Width="60" Height="60" Margin="0,0,20,0"/>
                <TextBlock Grid.Column="1" Text="Контроль качества"
                           FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                <Button Grid.Column="2" Content="Выход" x:Name="LogoutButton"
                        Background="#4879AC" Foreground="#FFFFFF" Padding="20,10" FontSize="14"/>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="#F3CC8D" Padding="15">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Назад" x:Name="BackButton" Background="#4879AC" Foreground="#FFFFFF" Padding="15,8" FontSize="14"/>
                <TextBlock Text="Заказ:" VerticalAlignment="Center"/>
                <ComboBox x:Name="OrderComboBox" Width="300" DisplayMemberBinding="{Binding Name}"/>
                <Button Content="Добавить параметр" x:Name="AddParamButton" Background="#4879AC" Foreground="#FFFFFF" Padding="15,8" FontSize="14"/>
                <Button Content="Сохранить" x:Name="SaveButton" Background="#4879AC" Foreground="#FFFFFF" Padding="15,8" FontSize="14"/>
                <Button Content="Завершить контроль" x:Name="FinishButton" Background="#4879AC" Foreground="#FFFFFF" Padding="15,8" FontSize="14"/>
                <Button Content="Оценить параметр" x:Name="RateButton" Background="#4879AC" Foreground="#FFFFFF" Padding="15,8" FontSize="14"/>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="2" x:Name="ParamsDataGrid" AutoGenerateColumns="False"
                  SelectionMode="Single" Margin="20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Параметр" Binding="{Binding ParamName}" Width="200" IsReadOnly="True"/>
                <DataGridTextColumn Header="Оценка" Binding="{Binding Result}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
